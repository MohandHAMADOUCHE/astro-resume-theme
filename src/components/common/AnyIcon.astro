---
// Minimal local icon component to avoid external typing issues
interface Props { name: string; class?: string; className?: string; [k: string]: any }
const { name, class: cls, className } = Astro.props as Props;
const sizeClass = className || cls || 'w-5 h-5';
---
{(() => {
	switch (name) {
		case 'Menu':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<line x1="3" y1="6" x2="21" y2="6"></line>
					<line x1="3" y1="12" x2="21" y2="12"></line>
					<line x1="3" y1="18" x2="21" y2="18"></line>
				</svg>
			);
		case 'flag-fr':
			return (
				<svg class={sizeClass} viewBox="0 0 3 2" aria-hidden="true">
					<rect width="1" height="2" x="0" y="0" fill="#0055A4" />
					<rect width="1" height="2" x="1" y="0" fill="#FFFFFF" />
					<rect width="1" height="2" x="2" y="0" fill="#EF4135" />
				</svg>
			);
			case 'flag-us':
				return (
					<svg class={sizeClass} viewBox="0 0 19 10" aria-hidden="true">
						<rect width="19" height="10" fill="#B22234" />
						<rect x="0" y="1" width="19" height="1" fill="#FFFFFF" />
						<rect x="0" y="3" width="19" height="1" fill="#FFFFFF" />
						<rect x="0" y="5" width="19" height="1" fill="#FFFFFF" />
						<rect x="0" y="7" width="19" height="1" fill="#FFFFFF" />
						<rect x="0" y="9" width="19" height="1" fill="#FFFFFF" />
						<rect width="7.6" height="7" fill="#3C3B6E" />
					</svg>
				);
		case 'tabler:mail':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<rect x="3" y="5" width="18" height="14" rx="2" />
					<polyline points="3,7 12,13 21,7" />
				</svg>
			);
		case 'Sun':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<circle cx="12" cy="12" r="5" />
					<path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
				</svg>
			);
		case 'Moon':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
				</svg>
			);
		case 'Retro':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
					<path d="M2 12h20v2H2zM4 8h16v2H4zM6 4h12v2H6zM6 18h12v2H6z" />
				</svg>
			);
		case 'tabler:brand-linkedin':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
					<line x1="8" y1="11" x2="8" y2="17" />
					<circle cx="8" cy="8" r="1" />
					<path d="M12 17v-4a2 2 0 0 1 4 0v4" />
				</svg>
			);
		case 'tabler:brand-github':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M12 2a10 10 0 0 0-3.16 19.49c.5.09.68-.22.68-.48 0-.24-.01-.87-.01-1.71-2.78.6-3.37-1.34-3.37-1.34-.45-1.14-1.11-1.45-1.11-1.45-.91-.62.07-.61.07-.61 1 .07 1.53 1.04 1.53 1.04 .9 1.53 2.36 1.09 2.94.84 .09-.66.35-1.09.64-1.34-2.22-.25-4.56-1.11-4.56-4.95 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02a9.56 9.56 0 0 1 5 0c1.91-1.29 2.75-1.02 2.75-1.02 .55 1.38.2 2.4.1 2.65 .64.7 1.03 1.59 1.03 2.68 0 3.85-2.34 4.7-4.57 4.95 .36.31.68.92.68 1.85 0 1.34-.01 2.41-.01 2.74 0 .26.18.57.69.47A10 10 0 0 0 12 2z" />
				</svg>
			);
		case 'tabler:brand-twitter':
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<line x1="4" y1="4" x2="20" y2="20" />
					<line x1="20" y1="4" x2="4" y2="20" />
				</svg>
			);
		default:
			return (
				<svg class={sizeClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M10 13l-3 3a2 2 0 1 1-3-3l3-3" />
					<path d="M14 11l3-3a2 2 0 1 1 3 3l-3 3" />
					<line x1="8" y1="16" x2="16" y2="8" />
				</svg>
			);
	}
})()}
