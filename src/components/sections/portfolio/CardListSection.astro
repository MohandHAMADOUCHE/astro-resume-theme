---
import CardListItem from './CardListItem.astro';

interface Item {
  title: string;
  sub_title: string;
  years: string;
  details?: string;
  thesisUrl?: string;
}

const { title, items, showDetails = true } = Astro.props as any;
---

<section class="py-14 bg-background">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl lg:text-4xl font-semibold text-center mb-12">
        {title}
    </h2>

    <ul class="space-y-8">
      {items.map((item: Item) => (
        <CardListItem
          title={item.title}
          sub_title={item.sub_title}
          years={item.years}
          details={item?.details}
          thesisUrl={(item as any)?.thesisUrl}
          showDetails={showDetails}
        />
      ))}
    </ul>
  </div>
</section>
