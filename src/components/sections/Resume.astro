---
import Experience from './portfolio/Experience.astro';
import Education from './portfolio/Education.astro';
import Skills from '../sections/Skills.astro';
import type { Locale } from '../../i18n/ui';
// Locale is derived by child sections from the URL; keep type import if other sections use props
export interface Props { locale?: Locale }
const { locale = 'fr' } = Astro.props as Props;
---

<section class="py-8 bg-background">
  <div class="container mx-auto px-6">
  <Skills variant="contained" />
    <div class="flex flex-col lg:flex-row lg:space-x-12">
      <div class="lg:w-1/2 mb-12 lg:mb-0">
        <Experience locale={locale} />
      </div>

      <div class="lg:w-1/2">
        <Education locale={locale} />
      </div>
    </div>
  </div>
</section>
