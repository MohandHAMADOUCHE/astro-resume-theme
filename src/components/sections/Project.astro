---
const { imageUrl, title, type, link, description } = Astro.props;
---
<a href={link} target="_blank" rel="noopener noreferrer" class="group block rounded-xl focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background" aria-label={`${title}${type ? ' â€“ ' + type : ''}`}>
  <div class="relative overflow-hidden rounded-xl cursor-pointer h-64 group shadow-lg border border-default">
    <img 
      src={imageUrl} 
      alt={title}
      loading="lazy" 
      decoding="async"
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />

    <div
      class="flex flex-col justify-center w-full h-full px-4 md:px-8 py-4 transition-opacity duration-700
        opacity-100 lg:opacity-0 backdrop-blur-sm bg-gray-900/85 lg:group-hover:opacity-100 lg:group-focus:opacity-100">
      <h2 class="mt-4 text-xl font-semibold text-white">{title}</h2>
      <p class="mt-2 text-lg font-bold tracking-wider text-primary uppercase">{type}</p>
      {description && (
        <p class="mt-2 text-sm text-gray-100/90 line-clamp-4">{description}</p>
      )}
    </div>
  </div>
</a>
